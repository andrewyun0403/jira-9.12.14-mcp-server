{
  "name": "jira-9.12.14-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Jira 9.12.14 API",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jira-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc && npm run make-executable",
    "make-executable": "shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "postinstall": "node dist/postinstall.js"
  },
  "keywords": [
    "jira",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.7.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  }
} 